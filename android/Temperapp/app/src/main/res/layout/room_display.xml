<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/tv_roomname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_tempexdescription"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="44dp"
        android:text="chambre X" />

    <TextView
        android:id="@+id/tv_tempexdescription"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="109dp"
        android:layout_weight="0.12"
        android:text="Temperature extérieure :"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_tempintdescription"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_weight="0.12"
        android:text="Temperature intérieure :"
        android:layout_below="@+id/tv_tempexdescription"
        android:layout_alignStart="@+id/tv_tempexdescription" />

    <TextView
        android:id="@+id/tv_tempext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_tempexdescription"
        android:layout_alignBottom="@+id/tv_tempexdescription"
        android:layout_alignStart="@+id/tv_tempint"
        android:text="x °" />

    <SeekBar
        android:id="@+id/sb_temp"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:max="300"
        android:progress="1"
        android:layout_below="@+id/tv_tempintdescription"
        android:layout_alignEnd="@+id/tv_tempext" />

    <TextView
        android:id="@+id/tv_tempint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sb_temp"
        android:layout_marginStart="63dp"
        android:layout_toEndOf="@+id/tv_tempintdescription"
        android:text="X °" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/tv_tempext"
        android:text="Date" />

    <TextView
        android:id="@+id/tv_fences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_roomname"
        android:layout_below="@+id/sb_temp"
        android:layout_marginTop="37dp"
        android:text="Volets :" />

    <TextView
        android:id="@+id/tv_windows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Fenêtre :"
        android:layout_below="@+id/tv_fences"
        android:layout_alignEnd="@+id/tv_fences" />

    <Switch
        android:id="@+id/sw_fences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_fences"
        android:layout_toEndOf="@+id/tv_roomname"
        android:layout_marginStart="24dp" />

    <Switch
        android:id="@+id/sw_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_windows"
        android:layout_alignStart="@+id/sw_fences" />

    <Button
        android:id="@+id/bt_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sw_window"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/tv_windows"
        android:text="Valider" />

</RelativeLayout>